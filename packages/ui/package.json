    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
