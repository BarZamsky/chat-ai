{
  "name": "@repo/ui",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./index.ts",
    "./components": "./src/components",
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
