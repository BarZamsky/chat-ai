{
  "name": "@chat-ai/ui",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@chat-ai/eslint-config": "workspace:*",
    "@chat-ai/typescript-config": "workspace:*",
    "@chat-ai/tailwind-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.5",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.5",
    "typescript": "5.9.2"
  }
}
